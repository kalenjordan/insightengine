<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A set of small, responsive CSS modules that you can use in every web project.">
    <title>
        {% block title %}{% endblock %}
    </title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Raleway:200">
    <link rel="stylesheet" href="http://purecss.io//combo/1.18.13?/css/main-grid.css&/css/main.css&/css/home.css&/css/rainbow/baby-blue.css">
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
    <link rel="stylesheet" href="{{ base_url }}/skin/css/main.css">
    <link rel="stylesheet" href="{{ base_url }}/skin/css/toggle.css">
</head>
<body>
<div id="layout">
    <a href="#menu" id="menuLink" class="menu-link">
        <span></span>
    </a>
    <div id="menu">
        <div class="pure-menu">
            <a class="pure-menu-heading" href="/manage/"><span class="insight">Insight</span><span class="engine">Engine</span></a>
            <ul class="pure-menu-list">
                <li class="pure-menu-item {{ tags_menu_selected ? "pure-menu-selected" : "" }}">
                    <a href="/manage/" class="pure-menu-link"><i class="fa fa-tags"></i> Tags</a>
                </li>
                <li class="pure-menu-item {{ account_menu_selected ? "pure-menu-selected" : "" }}">
                    <a href="/manage/account/" class="pure-menu-link"><i class="fa fa-user"></i> Account</a>
                </li>

                <li class="pure-menu-item">
                    <a href="/manage/logout/" class="pure-menu-link"><i class="fa fa-sign-out"></i> Log Out</a>
                </li>
            </ul>
        </div>
    </div>


    <div id="main">
        {% block content %} {% endblock %}

        <div class="footer">
            <div class="legal pure-g">
                <div class="pure-u-1 u-sm-1-2">
                    <p class="legal-license">
                        This site is built with &lt;3 using Pure v0.6.0<br>
                    </p>
                </div>

                <div class="pure-u-1 u-sm-1-2">
                    <ul class="legal-links">
                        <a href="{{ base_url }}#about">About</a>
                        &middot;
                        <a href="mailto:info@insightengine.com">Contact</a>
                        &middot;
                        <a href="#"><i class="fa fa-twitter"></i></a>

                        <li></li>
                        <li></li>
                    </ul>

                    <p class="legal-copyright">
                        &copy; 2015 InsightEngine. All rights reserved.
                    </p>
                </div>
            </div>
        </div> <!-- .footer -->

    </div> <!-- #main -->
</div> <!-- #layout -->

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="{{ base_url }}/js/ui.js"></script>
</body>
</html>
